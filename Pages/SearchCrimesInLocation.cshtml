@page
@model SearchCrimesInLocationModel
@{
}

<form action="" method="POST" style="margin-top: 50px;">
  <div class="form-group">
    <label class="control-label" for="search">Enter State Name :</label>
    <input type="text" class="form-control" name="search" id="search" />
  </div>
  <div class="form-group">
    <input type="submit" value="Search Crimes" class="btn btn-default" />
  </div>
</form>


@if(Model.SearchCompleted) {
    <table class="table">
        <thead>
            <tr>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>More Information</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.SearchResults.Count > 0) {
                @foreach(var loc in Model.SearchResults) {
                    <tr>
                        <td>@loc.StreetAddress.</td>
                        <td>@loc.City</td>
                       
                        <td>@loc.State</td>
                        <td>
                            <a asp-page="CrimesInLocation" asp-route-id="@loc.Id">More Information</a>
                        </td>
                    </tr>
                }
            } else {
                <tr class="danger">
                    <td colspan="4" class="text-center">
                        No results found for term "@Model.Search"
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <div class="alert alert-info">
        <p>
            Enter the search terms into the box and click <strong>Search State Crimes</strong>
        </p>
    </div>
}

