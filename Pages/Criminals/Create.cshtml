@page
@model ProjCRS.Pages.Criminals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Step 1 of 3 </h2>

<h4>Enter Criminal description</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Criminal.FirstName" class="control-label"></label>
                <input asp-for="Criminal.FirstName" class="form-control" />
                <span asp-validation-for="Criminal.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.LastName" class="control-label"></label>
                <input asp-for="Criminal.LastName" class="form-control" />
                <span asp-validation-for="Criminal.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.BirthDate" class="control-label"></label>
                <input asp-for="Criminal.BirthDate" class="form-control" />
                <span asp-validation-for="Criminal.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.Gender" class="control-label"></label>
                <select  asp-for="Criminal.Gender" class="form-control" asp-items="ViewBag.GenreId">
                   <option selected disabled>Select</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>

                </select>
                <span asp-validation-for="Criminal.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.StreetAddress" class="control-label"></label>
                <input asp-for="Criminal.StreetAddress" class="form-control" />
                <span asp-validation-for="Criminal.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.City" class="control-label"></label>
                <input asp-for="Criminal.City" class="form-control" />
                <span asp-validation-for="Criminal.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.State" class="control-label"></label>
                <input asp-for="Criminal.State" class="form-control" />
                <span asp-validation-for="Criminal.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.ZipCode" class="control-label"></label>
                <input asp-for="Criminal.ZipCode" class="form-control" />
                <span asp-validation-for="Criminal.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Criminal.Employed" /> @Html.DisplayNameFor(model => model.Criminal.Employed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.Income" class="control-label"></label>
                <input asp-for="Criminal.Income" class="form-control" />
                <span asp-validation-for="Criminal.Income" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Criminal.EducationLevel" class="control-label"></label>
                <select asp-for="Criminal.EducationLevel" class="form-control" >
                
                   <option selected disabled>Select</option>
                  <option value="Uneducated">Uneducated</option>
                  <option value="Primary School">Primary School</option>
                  <option value="High School">High School</option>
                  <option value="Undergraduate">Undergraduate</option>
                  <option value="Graduate">Graduate</option>
                  <option value="Doctorate">Doctorate</option>

                </select>
                <span asp-validation-for="Criminal.EducationLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
