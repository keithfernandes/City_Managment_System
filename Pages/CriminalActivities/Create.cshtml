@page
@model ProjCRS.Pages.CriminalActivities.CreateModel

@{
    ViewData["Title"] = "Create";
}
@if(!Model.SubmitCompleted) {
<h2> Step 3 of 3 </h2>

<h4>Enter Crime details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CriminalActivity.TimeOfOccurance" class="control-label"></label>
                <input asp-for="CriminalActivity.TimeOfOccurance" class="form-control" />
                <span asp-validation-for="CriminalActivity.TimeOfOccurance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CriminalActivity.CriminalId" class="control-label"></label>
                <select asp-for="CriminalActivity.CriminalId" class ="form-control" asp-items="ViewBag.CriminalId">
                     <option selected disabled>Select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CriminalActivity.LocationId" class="control-label"></label>
                <select asp-for="CriminalActivity.LocationId" class ="form-control" asp-items="ViewBag.LocationId">
                <option selected disabled>Select</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="CriminalActivity.CriminalCodeId" class="control-label"></label>
                <select asp-for="CriminalActivity.CriminalCodeId" class ="form-control" asp-items="ViewBag.CriminalCodeId">
                     <option selected disabled>Select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CriminalActivity.CaseStatus" class="control-label"></label>
                <select asp-for="CriminalActivity.CaseStatus" class="form-control" >              
                  <option selected disabled>Select</option>
                  <option value="Pending District Court">Pending District Court</option>
                  <option value="Pending Family Court">Pending Family Court</option>
                  <option value="Pending High Court">Pending High Court</option>
                  <option value="Pending Appeal Court">Pending Appeal Court</option>
                  <option value="Pending Coroners Court">Pending Coroners Court</option>
                  <option value="Pending Youth Court">Pending Youth Court</option>
                  <option value="Case Dismissed">Case Dismissed</option>
                  <option value="Acquited">Acquited</option>
                  <option value="Convicted">Convicted</option>

                </select>
                <span asp-validation-for="CriminalActivity.CaseStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else{
    <h2>Record Created Successfully</h2>

    <div>
    <a href= "/Index">Back to Home</a>
    </div>   

}