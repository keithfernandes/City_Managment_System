@page
@model ProjCRS.Pages.CrimeLocations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Crime Location List</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CrimeLocation[0].StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrimeLocation[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrimeLocation[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrimeLocation[0].ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CrimeLocation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
