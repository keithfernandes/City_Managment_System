@page
@model RecentCrimeListModel
@{
}

<h1>Recent Crimes</h1>


<div class="row">
    
    <div class="col-md-6">
        <h3>Recent Crimes</h3>
        <p>Past week data</p>
       
            
            <table class ="table">
                
                    <tr>
                        <th>Time  </th>
                         
                        <th class = "text-right">Crime</th>
                        <th class = "text-right">Location</th>
                        
                    </tr> 

                 @foreach(var coll in Model.CriminalActivity) {
                     
                    <tr>  
                     <td>
                        @coll.TimeOfOccurance
                     </td>
                     <td class="text-right">
                         @coll.CriminalCode.Description
                     </td>
                   

                    <td class = "text-right">
                        @coll.Location.City
                    </td>
                    </tr>
                      
                   
            }
                       
            </table>
           
            
        
           
       
        
    </div>